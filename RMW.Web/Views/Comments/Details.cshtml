@model RMW.Models.Comment

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Comment</legend>

    <div class="display-label">CreatedOn</div>
    <div class="display-field">@String.Format("{0:g}", Model.CreatedOn)</div>

    <div class="display-label">UpdatedOn</div>
    <div class="display-field">@String.Format("{0:g}", Model.UpdatedOn)</div>

    <div class="display-label">Author</div>
    <div class="display-field">@Model.Author</div>

    <div class="display-label">Body</div>
    <div class="display-field">@Model.Body</div>

    <div class="display-label">Email</div>
    <div class="display-field">@Model.Email</div>

    <div class="display-label">IpAddress</div>
    <div class="display-field">@Model.IpAddress</div>

    <div class="display-label">URL</div>
    <div class="display-field">@Model.URL</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


