@model RMW.Models.Log4Net

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Log4Net</legend>

    <div class="display-label">Date</div>
    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>

    <div class="display-label">Thread</div>
    <div class="display-field">@Model.Thread</div>

    <div class="display-label">Level</div>
    <div class="display-field">@Model.Level</div>

    <div class="display-label">Logger</div>
    <div class="display-field">@Model.Logger</div>

    <div class="display-label">Message</div>
    <div class="display-field">@Model.Message</div>

    <div class="display-label">Exception</div>
    <div class="display-field">@Model.Exception</div>

    <div class="display-label">Location</div>
    <div class="display-field">@Model.Location</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


